{
  "manifest_version": 3,
  "name": "Pomodoro CRVG",
  "version": "1.0.0",
  "description": "Uma extensão de navegador simples e elegante para ajudar a gerenciar seu tempo com a técnica Pomodoro.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Pomodoro Timer",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}